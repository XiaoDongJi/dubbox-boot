<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="xybase-dynamic-service" />

	<!-- 使用zookeeper注册中心暴露服务地址 -->
	<dubbo:registry address="${dubbo.registry.address}" file="c:/dubbo/xybase-dynamic-service.cache"/>

	<!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20881" />
    
    <!-- <dubbo:protocol name="rest" port="8888" server="tomcat"/> -->

    <!-- <dubbo:protocol name="http" port="8889"/>
    <dubbo:protocol name="hessian" port="8890"/>
    <dubbo:protocol name="webservice" port="8892"/> -->
    
    <!-- 通过注册中心发现监控中心服务 -->
    <dubbo:monitor protocol="registry" />
    
    <!-- 扫描注解包路径，多个包用逗号分隔，不填pacakge表示扫描当前ApplicationContext中所有的类 -->
	<dubbo:annotation package="cn.xingyun.base" />
    
    <!-- 服务提供者缺省值配置 -->
    <dubbo:provider timeout="60000" delay="-1" retries="2" />
    
</beans>